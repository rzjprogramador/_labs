// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    nome            String
    estabelecimento String
    email           String @unique
    password        String

    habilitacao StatusHabilitacao @default(DESATIVADO)
    tipoUser    TipoUser          @default(CLIENTE)
    cargo       CargoUser         @default(USER)

    id          String?
    idDB        String    @id @default(uuid())
    indexRef    Int       @default(autoincrement())
    createdAt   DateTime  @default(now())
    updated     DateTime  @updatedAt()
    ultimoLogin DateTime?


    @@index([nome])
    @@map("users")
}

// ENUMS =================

enum CargoUser {
    USER
    ADMIN
    MODERADOR
    FUNCIONARIO
    ENTREGADOR
}

enum TipoUser {
    CLIENTE
    PADRAO
    LOJISTA
    FUNCIONARIO
}

enum StatusEntrega {
    HA_RECOLHER
    ANALISE
    TRANSITANDO
    ENTREGUE
}

enum StatusHabilitacao {
    DESATIVADO
    HABILITADO
    EXCLUIDO
}

enum AreaCobertura {
    APROVADO
    INDISPONIVEL
}
