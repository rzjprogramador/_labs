generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    nome            String
    estabelecimento String
    email           String    @unique
    password        String

    habilitacao StatusHabilitacao @default(DESATIVADO)
    tipoUser    TipoUser          @default(CLIENTE)
    cargo       CargoUser         @default(USER)

    pedidos Pedido[]

    id        String?
    idDB      String   @id @default(uuid())
    indexRef  Int      @default(autoincrement())
    createdAt DateTime @default(now())
    updated   DateTime @updatedAt()
    ultimoLogin     DateTime?


    @@index([nome])
    @@map("users")
}

model Pedido {
    codigo     Int @default(autoincrement())
    quantidade Int

    id        String?
    idDB      String   @id @default(uuid())
    indexRef  Int      @default(autoincrement())
    createdAt DateTime @default(now())
    updated   DateTime @updatedAt()

    users    User[]
    entregas Entrega[]


    @@index([codigo])
    @@map("pedidos")
}

model Produto {
    codigo     Int    @default(autoincrement())
    nome       String
    quantidade Int

    id        String?
    idDB      String   @id @default(uuid())
    indexRef  Int      @default(autoincrement())
    createdAt DateTime @default(now())
    updated   DateTime @updatedAt()


    @@index([nome])
    @@map("produtos")
}

model Entrega {
    pedidos Pedido[]

    id   String?
    idDB String  @id @default(uuid())

    @@map("entregas")
}

model Endereco {
    quantidade Int

    remetente    String
    destinatario String
    logradouro   String
    numero       String
    complemento  String
    cep          String
    estado       String

    cidades Cidade?

    id   String?
    idDB String  @id @default(uuid())

    @@map("enderecos")
}

model Cidade {
    nome String @unique

    endereco Endereco[]

    id   String?
    idDB String  @id @default(uuid())

    Endereco Endereco[]
    @@map("cidades")
}

enum CargoUser {
    USER
    ADMIN
    MODERADOR
    FUNCIONARIO
    ENTREGADOR
}

enum TipoUser {
    CLIENTE
    PADRAO
    LOJISTA
    FUNCIONARIO
}

enum StatusEntrega {
    HA_RECOLHER
    ANALISE
    TRANSITANDO
    ENTREGUE
}

enum StatusHabilitacao {
    DESATIVADO
    HABILITADO
    EXCLUIDO
}

enum AreaCobertura {
    APROVADO
    INDISPONIVEL
}

