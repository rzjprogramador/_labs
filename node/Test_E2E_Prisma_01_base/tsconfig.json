{
  "compilerOptions": {
      "target": "ES2019",
      "module": "commonjs",
      "lib": [
          "ESNext",
          "DOM"
      ],
      "outDir": "./dist",
      "removeComments": true,
      "noEmitOnError": true,
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strictPropertyInitialization": false,
      "allowJs": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "rootDir": ".",
      "baseUrl": "./src",
      "paths": {
          "@/*": [
              "*"
          ]
      },
  },
  "typeRoots": [
      "node_modules/@types"
  ],
  "include": [ // INCLUI NO BUILD E NA LEITURA DE PASTA NA RAIZ DO PROJETO
      "src/**/*.ts", "tests"],
  "exclude": [],
}