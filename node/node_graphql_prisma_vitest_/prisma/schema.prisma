generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    nome            String
    estabelecimento String
    email           String    @unique
    password        String
    ultimoLogin     DateTime?

    habilitacao StatusHabilitacao @default(DESATIVADO)
    tipoUser    TipoUser          @default(CLIENTE)
    cargo       CargoUser         @default(USER)

    pedidos Pedido[]

    id        String?
    idDB      String   @id @default(uuid())
    indexRef  Int      @default(autoincrement())
    createdAt DateTime @default(now())
    updated   DateTime @updatedAt()


    @@index([nome])
    @@map("users")
}

model Pedido {
    codigo Int @default(autoincrement())

    id        String?
    idDB      String   @id @default(uuid())
    indexRef  Int      @default(autoincrement())
    createdAt DateTime @default(now())
    updated   DateTime @updatedAt()

    users User[]


    @@index([codigo])
    @@map("pedidos")
}

model Produto {
    codigo Int    @default(autoincrement())
    nome   String

    id        String?
    idDB      String   @id @default(uuid())
    indexRef  Int      @default(autoincrement())
    createdAt DateTime @default(now())
    updated   DateTime @updatedAt()


    @@index([nome])
    @@map("produtos")
}

enum CargoUser {
    USER
    ADMIN
    MODERADOR
    FUNCIONARIO
    ENTREGADOR
}

enum TipoUser {
    CLIENTE
    PADRAO
    LOJISTA
    FUNCIONARIO
}

enum StatusEntrega {
    HA_RECOLHER
    ANALISE
    TRANSITANDO
    ENTREGUE
}

enum StatusHabilitacao {
    DESATIVADO
    HABILITADO
    EXCLUIDO
}

enum AreaCobertura {
    APROVADO
    INDISPONIVEL
}

