// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Hello {
    idDB     String  @id @default(uuid())
    id       String?
    indexRef Int     @default(autoincrement())
    nome     String
    preco    Float

    @@map("hellos")
}

model ProdEncomenda {
    idDB  String @id @default(uuid())
    nome  String
    preco Float

    @@map("prod_encomendas")
}

model User {
    nome String

    id        String?
    idDB      String   @id @default(uuid())
    indexRef  Int      @default(autoincrement())
    createdAt DateTime @default(now())
    updated   DateTime @updatedAt()


    @@index([nome])
    @@map("users")
}

model Pedido {
    codigo Int @default(autoincrement())

    id        String?
    idDB      String   @id @default(uuid())
    indexRef  Int      @default(autoincrement())
    createdAt DateTime @default(now())
    updated   DateTime @updatedAt()


    @@index([codigo])
    @@map("pedidos")
}

model Produto {
    nome String

    id        String?
    idDB      String   @id @default(uuid())
    indexRef  Int      @default(autoincrement())
    createdAt DateTime @default(now())
    updated   DateTime @updatedAt()


    @@index([nome])
    @@map("produtos")
}
