{
  "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "outDir": "./dist",
      "typeRoots": ["node_modules/@types"],
    //   "types": ["typed-graphql"],
      "removeComments": true,
      "noEmitOnError": true,
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strictPropertyInitialization": false,
      "allowJs": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "rootDir": ".",
      "baseUrl": "./src",
      "paths": {
          "@/*": [
              "*"
          ]
      },
      "experimentalDecorators": true,
        "emitDecoratorMetadata": true
  },
  
  "include": [ // INCLUI NO BUILD E NA LEITURA DE PASTA NA RAIZ DO PROJETO
      "src/**/*.ts", "tests_in_memory"],
  "exclude": [],
}